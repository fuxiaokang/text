<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net /hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.text">
<class name="Student" table="tb_student">
  <id name="id" column="id">
      <generator class="native"/>
  </id><!-- 主键映射 -->
  <property name="username" column="username" not-null="true" length="50" />
  <property name="password" column="password" not-null="true" length="50" />
  <property name="email" column="email" length="50" />
</class>
</hibernate-mapping>